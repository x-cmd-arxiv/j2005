r study.\n","versions":[{"version":"v1","created":"Tue, 21 Jun 2005 20:05:50 GMT"},{"version":"v2","created":"Fri, 29 Jul 2005 20:13:20 GMT"},{"version":"v3","created":"Mon, 22 Aug 2005 21:33:42 GMT"},{"version":"v4","created":"Sun, 13 Nov 2005 20:57:53 GMT"},{"version":"v5","created":"Mon, 17 Apr 2006 21:44:11 GMT"}],"update_date":"2007-05-23"}
